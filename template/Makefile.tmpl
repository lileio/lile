# vi: ft=make
.PHONY: proto test get ci docker

proto:
	protoc -I . {{.Name}}.proto --lile-server_out=. --go_out=plugins=grpc:$$GOPATH/src

test:
	go test -v ./... -cover

get:
	go get -u -t ./...

ci: get test

docker:
	GOOS=linux GOARCH=amd64 go build -o build/{{ .Name }} ./{{ .Name }}
	docker build . -t {{.RelativeName}}:latest
